#ifndef ARRAYEMPLOYEES_H_
#define ARRAYEMPLOYEES_H_

typedef struct{
 int id;
 char name[51];
 char lastName[51];
 float salary;
 int sector;
 int isEmpty;
}eEmployee;

int iniciarEarray(eEmployee *plistEmployee,int len);
int imprimirEarray(eEmployee *plistEmployee,int len);
int agregarEarray(eEmployee *plistEmployee,int len,int id,char name[],char lastName[],float salary,int sector);
int buscarUnIdArray(eEmployee *plistEmployee,int len,int id);
int eliminarLogIdArray(eEmployee *plistEmployee,int len,int id);
int ordenarArray(eEmployee *plistEmployee,int len,int order);

int modificarUnDatodelArray(eEmployee *plistEmployee, int len);
int operateSalaryEmployees(eEmployee *plistEmployee,int len,float *totalSalary, float *promSalary, int *overProm);
int largoArray(eEmployee *plistEmployee,int len);
int buscarLugarArray(eEmployee *plistEmployee,int len);

#endif /* ARRAYEMPLOYEES_H_ */
